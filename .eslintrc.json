{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "firebase": "readonly",
    "Stripe": "readonly",
    "Sentry": "readonly",
    "marked": "readonly",
    "module": "readonly",

    "API_URL": "writable",
    "apiService": "writable",
    "apiCall": "writable",
    "refreshToken": "writable",
    "performLogout": "writable",
    "getCurrentUser": "writable",
    "setCurrentUser": "writable",
    "requireAuth": "writable",
    "isAuthenticated": "writable",

    "CartManager": "writable",
    "cartManager": "writable",
    "cartUI": "writable",

    "DarkModeManager": "writable",
    "darkModeManager": "writable",

    "ModalManager": "writable",
    "modalManager": "writable",
    "showModal": "writable",
    "closeModal": "writable",
    "showAlert": "writable",
    "showSuccess": "writable",
    "showError": "writable",
    "showConfirm": "writable",

    "captureError": "writable",
    "trackAction": "writable",

    "initializeDashboard": "writable"
  },
  "rules": {
    "no-unused-vars": ["warn", {
      "vars": "all",
      "args": "none",
      "varsIgnorePattern": "^_"
    }],
    "no-undef": "error",
    "no-redeclare": "off",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-unreachable": "error",
    "no-constant-condition": "warn",
    "no-empty": "warn",
    "no-extra-semi": "warn",
    "no-irregular-whitespace": "error",
    "no-unsafe-negation": "error",
    "valid-typeof": "error",
    "eqeqeq": ["warn", "smart"],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-self-assign": "error",
    "no-self-compare": "error",
    "no-useless-escape": "warn",
    "no-with": "error",
    "no-delete-var": "error",
    "no-shadow-restricted-names": "error",
    "no-use-before-define": ["error", {
      "functions": false,
      "classes": true,
      "variables": true
    }]
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js",
    "vendor/"
  ]
}
